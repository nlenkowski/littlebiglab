{
  "name": "littlebiglab",
  "version": "1.0.0",
  "author": "Nathan Lenkowski <nathan@littlebiglab.com>",
  "homepage": "http://littlebiglab.com",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nlenkowski/littlebiglab"
  },
  "bugs": {
    "url": "https://github.com/nlenkowski/littlebiglab/issues"
  },
  "browserslist": [
    "last 2 versions",
    "android 4"
  ],
  "babel": {
    "presets": [
      "env"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": "airbnb-base",
    "env": {
      "browser": true,
      "es6": true
    },
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {},
    "globals": {
      "Snap": true,
      "mina": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "no-empty-source": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "extend",
            "at-root",
            "debug",
            "warn",
            "error",
            "if",
            "else",
            "for",
            "each",
            "while",
            "mixin",
            "include",
            "content",
            "return",
            "function"
          ]
        }
      ]
    }
  },
  "scripts": {
    "clean": "rimraf dist/{fonts/*,icons/*,images/*,scripts/*,styles/*}",
    "fonts": "copyfiles -f assets/fonts/*.woff assets/fonts/*.woff2 dist/fonts",
    "icons": "svgstore assets/icons/*.svg -o dist/icons/symbols.svg -p icon-",
    "images": "imagemin --plugin=pngquant --plugin=mozjpeg assets/images/* -o dist/images",
    "build": "npm run clean && run-p fonts icons images webpack",
    "build:prod": "npm run clean && run-p fonts icons images webpack:prod",
    "lint": "run-p lint:scripts lint:styles",
    "lint:scripts": "eslint assets/scripts || true",
    "lint:styles": "stylelint assets/styles/**/*.scss --syntax scss || true",
    "webpack": "webpack --config webpack.config.js --progress",
    "webpack:prod": "webpack -p --config webpack.config.js --progress",
    "webpack:watch": "webpack --watch --config webpack.config.js --progress",
    "watch": "npm run clean && run-p fonts icons images webpack:watch"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.1",
    "node-sass": "^4.6.1",
    "npm-run-all": "^4.1.2",
    "postcss-load-config": "^1.2.0",
    "postcss-loader": "^2.0.9",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "svgstore-cli": "^1.3.1",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "nodelist-foreach-polyfill": "^1.2.0",
    "normalize.css": "^7.0.0",
    "snapsvg-cjs": "0.0.6",
    "svgxuse": "^1.2.6"
  }
}
