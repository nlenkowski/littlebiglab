{
  "name": "littlebiglab",
  "homepage": "http://littlebiglab.com",
  "authors": [
    "Nathan Lenkowski <nathan@littlebiglab.com>"
  ],
  "license": "MIT",
  "private": true,
  "scripts": {
    "clean": "rimraf dist/{scripts/*,styles/*,fonts/*,images/*,svg/*}",
    "build:fonts": "copyfiles -f assets/fonts/*.woff assets/fonts/*.woff2 dist/fonts",
    "build:images": "imagemin --plugin=pngquant --plugin=mozjpeg assets/images/* -o dist/images",
    "build:svg": "svgstore assets/svg/*.svg -o dist/svg/symbols.svg -p icon-",
    "build:webpack:dev": "webpack --config webpack.config.js",
    "build:webpack:prod": "NODE_ENV=production && webpack -p --config webpack.config.js --progress",
    "build:webpack:watch": "webpack --watch --config webpack.config.js",
    "build:static": "run-p build:fonts build:svg build:images",
    "build:dev": "npm run clean && run-p build:static build:webpack:dev",
    "build:prod": "npm run clean && run-p build:static build:webpack:prod",
    "lint": "run-p lint:scripts lint:styles",
    "lint:scripts": "eslint assets/scripts || true",
    "lint:styles": "stylelint assets/styles/**/*.scss --syntax scss || true",
    "watch": "npm run clean && run-p build:static build:webpack:watch"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "browser-sync": "^2.18.13",
    "browser-sync-webpack-plugin": "^1.2.0",
    "copyfiles": "^1.2.0",
    "css-loader": "^0.28.7",
    "eslint": "^4.11.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "imagemin-cli": "^3.0.0",
    "imagemin-mozjpeg": "^6.0.0",
    "imagemin-pngquant": "^5.0.1",
    "node-sass": "^4.6.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "svgstore-cli": "^1.3.1",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "normalize-scss": "^7.0.0",
    "snapsvg-cjs": "0.0.6",
    "svgxuse": "^1.2.6"
  }
}
